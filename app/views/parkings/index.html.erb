<div class="container-fluid">
  <div id="rowTextAlign" class ="row">
  <div id ="titleContainer" class = "col-sm-12">

<h1>Current Parkings</h1>

</div>
</div>

<% if @user_has_no_parkings == false %>

<div id="carOutterWrapper"> 

<div class="container">
  <div class="row">
    <% @parkings.each do |parking| %>
      <div class="col-sm-12">
      <a href="/parkings/<%= parking.id%>"> 
        <button class="btn btn-info buttonWidth">
        <div>
        <%= Car.find(parking.car_id).nickname %> Session  <br>
        <% if parking.move_by != nil %>
          Move By: <%= parking.move_by.in_time_zone("Eastern Time (US & Canada)").strftime("%a %D %l:%M %P") %>
        <% end %>
        </div>
        </button>
      </a>
      </div>
    <% end %>
  </div>

<% else %> 
      <% if @user.cars == [] %>
        <div class="row">
            <div class="col-sm-12">
            <p>Looks like you don't have any cars registered. 
        </div>
        <div class="col-sm-12">
          Click <%= link_to 'Here', new_car_path %> to register your first car!</p>
        </div>
        </div>
      <% else %>
        <div class="row">
          <p>Looks like you don't have any current parking sessions. 
          <br>
          <br>
          Click <%= link_to 'Here', new_parking_path %> to Parkner for the first time!</p>
        </div>
<% end %>
<% end %>
<br>
<% if @user_has_no_parkings == false %>
  <button class="addButton">
    <%= link_to 'Create New Parking Session', new_parking_path %>
  </button>
  </div>
<% end %>

</div>


